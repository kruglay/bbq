<% image_title = "Добавил #{render partial: 'users/user', object: photo.user}" %>

<% if current_user_can_edit?(photo) %>
    <% image_title += link_to(
        fa_icon('trash'), event_photo_path(photo.event, photo),
        method: :delete, data: {confirm: t('.destroy_confirm')}
    ) %>
<% end %>

<div class="col-md-3 center-block event-photo">
  <%= link_to image_tag(photo.photo.thumb.url), photo.photo.url, class: "event-photos-center",
              data: {toggle: 'lightbox', title: image_title, gallery: 'event-photos'} %>
</div>
